@using VendorOrder.Models;

@{
  Layout = "_Layout";
}

<h1>Vendor List</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

<ul>
@foreach (Vendor vendor in Model)
{
  <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
}
</ul>


<p><a href='/vendors/new'>Add a new vendor</a></p>
<form method='post' action='/vendors/delete'>
  <button type='submit'>Delete All Vendors</button>
</form>
<p><a href='/'>Return Home</a></p>